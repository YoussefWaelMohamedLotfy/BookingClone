@using BookingClone.Application.Features.HotelFeatures.DTOs;
@model GetHotelsDto
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden />
    <div class="border border-1 ">
        <h2 class="text-info ps-3 my-2">Edit Hotel for ID @Model.Id</h2>
    <div class=" row container"> 
        <div class="col-4">
            <label class=" my-2 d-block my-2">Hotel Name</label>
             <label class="my-4  d-block my-2">Hotel Description</label>
            <label class=" my-2 ">StarRating</label>

        </div>
        <div class="col-8">

            <input asp-for="Name" class="form-control w-50 my-2 " />
            
    <input class="form-control w-50 my-2 " asp-for="Description" />
  
    <input class="form-control w-50" asp-for="StarRating" /> 

        <div class="form-group row py-2 ">
      
            <div class="col">
                <button type="submit" class="btn btn-primary mx-1 my-2">
                    <i class="bi bi-check-circle"></i>
                  Submit
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary  my-2">
                    <i class="bi bi-arrow-left"></i>
                    Back
                </a>
            </div>
  
    </div>

        </div>
    </div>

    </div>

</form>
