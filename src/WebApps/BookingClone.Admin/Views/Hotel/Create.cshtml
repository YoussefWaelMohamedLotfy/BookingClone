@using BookingClone.Application.Features.HotelFeatures.DTOs;
@model AddHotelDto
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info ps-3">Create new Hotel</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" type="text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" type="text" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                 <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="StarRating"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StarRating" class="form-control" type="text" />
                        <span asp-validation-for="StarRating" class="text-danger"></span>
                    </div>
                </div>

                </div>
                </div>
                </div>
                
                </form>





