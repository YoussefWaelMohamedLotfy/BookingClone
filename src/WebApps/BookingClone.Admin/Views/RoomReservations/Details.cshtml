@using BookingClone.Application.Features.RoomReservationFeatures.DTOs;
@model GetRoomReservationDto
@{
    ViewData["Title"] = "Details";
}

<form method="post" asp-action="Details">
    <input asp-for="ID" hidden />
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info ps-3">Room Reservation Details for ID @Model.ID</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Status" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="TotalCost"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TotalCost" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CheckIn"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CheckIn" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CheckOut"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CheckOut" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a asp-action="Edit" class="btn btn-primary">
                                <i class="fas fa-sign-out-alt"></i>
                                Back
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-sign-out-alt"></i>
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>