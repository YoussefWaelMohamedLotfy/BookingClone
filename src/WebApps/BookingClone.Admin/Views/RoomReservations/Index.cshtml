@using BookingClone.Application.Features.RoomReservationFeatures.DTOs;
@model List<GetRoomReservationDto>
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Room Reservations List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">
            <i class="bi bi-plus"></i>
            Create New Room Reservation
        </a>
    </div>
</div>
<div class="p-1 border rounded">
    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>ID</th>
                <th>Name</th>
                <th>Total Price</th>
                <th>Check In</th>
                <th>Check Out</th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.Status.ToString()
                    </td>
                    <td>
                        @item.TotalCost
                    </td>
                    <td>
                        @item.CheckIn
                    </td>
                    <td>
                        @item.CheckOut
                    </td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-id="@item.ID">
                                <a asp-action="Upsert" asp-route-id="@item.ID" class="btn btn-info text-white" style="cursor:pointer">
                                    Edit
                                </a>
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Data Available</p>
    }
</div>